<Window x:Class="Sendy.UserControls.DirectTable"
        x:Name="DirectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sendy.UserControls"
        mc:Ignorable="d"
        Height="450" Width="800"
        Background="AliceBlue"
        Closed="DirectWindow_Closed" Loaded="DirectWindow_Loaded">

    <Grid>
        <DataGrid x:Name="DBView" AutoGenerateColumns="True" ItemsSource="{Binding}"/>

    </Grid>
</Window>
